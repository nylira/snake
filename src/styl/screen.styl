@require 'nib'

global-reset()

body
  display block
  font-size 16px
  font-family 'Helvetica Neue', Arial, Helvetica, sans-serif

#header
  border-top 3px solid #333
  height 64px
  width 512px
  margin 0 auto
  clearfix()
  h1
    line-height 64px
    font-weight 300
    font-size 1.5em
    float left
  button
    border 1px solid #333
    padding 0
    display block
    background #fff
    width 120px
    font-size 16px
    height 36px
    margin-top 14px
    line-height 36px
    float right
    color #333
    cursor pointer
    &:hover
      font-weight bold
      background #333
      color #fff

canvas
  margin 0 auto
  display block
  width 512px
  height 512px
